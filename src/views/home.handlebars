<main class="lista-vacantes">
    <h2>Lista de ofertas</h2>
    {{#if vacantes.length}}
        {{#each vacantes}}
            <div class="vacante">
                <div class="caja">
                    <h3>{{empresa}}</h3>
                    <p class="puesto">{{titulo}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Ubicacion</p>
                    <p class="nombre">{{ubicacion}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Contrato</p>
                    <p class="nombre contrato">{{contrato}}</p>
                </div>
                <div class="caja central-vertical">
                    <a href="/vacantes/{{url}}" class="btn btn-verde">Mas Info</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No existen vacantes con esa busqueda</p>
    {{/if}}
    {{!-- vacantes --}}
</main>