<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" class="default-form" method="POST">
        <h3>Informacion General</h3>
        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" value="{{vacante.titulo}}" required>
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" value="{{vacante.empresa}}" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicacion</label>
            <input type="text" name="ubicacion" value="{{vacante.ubicacion}}" required>
        </div>
        <div class="campo">
            <label for="salario">Salario</label>
            <input type="text" name="salario" value="{{vacante.salario}}" required>
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                <option value="" disabled selected>--Selecciona Contrato--</option>
                <option value="Freelance">Freelance</option>
                <option value="Jornada Completa">Jornada Completa</option>
                <option value="Media Jornada">Media Jornada</option>
                <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label>Descripcion</label>
            <input type="hidden" value="{{{vacante.descripcion}}}" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Habilidades</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills }}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>