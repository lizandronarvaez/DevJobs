<main class="contenedor">
    <form action="/vacantes/nueva" class="default-form" method="POST">
        <h3>Informacion General</h3>
        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" placeholder="Ejemplo: React, Node,Full Stack, Backend Development">
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" placeholder="Ejemplo: Nombre Empresa">
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicacion</label>
            <input type="text" name="ubicacion" placeholder="Ejemplo: España y/o Remoto">
        </div>
        <div class="campo">
            <label for="salario">Salario</label>
            <input type="text" name="salario" placeholder="Ejemplo: 1200€, 1300€, 4000€">
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato">
                <option value="" disabled selected>--Selecciona--</option>
                <option value="Freelance">Freelance</option>
                <option value="Jornada Completa">Jornada Completa</option>
                <option value="Media Jornada">Media Jornada</option>
                <option value="Por Proyecyo">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label>Descripcion</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Habilidades</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills }}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Enviar" class="btn btn-azul">
        </div>
    </form>
</main>