<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700;900&display=swap" rel="stylesheet">
    <title>{{tituloPagina}}</title>
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <link rel="stylesheet" type="text/css" href="/css/trix.css">
</head>

<body>
    <div class="nombre-sitio contenedor">
        <h1>
            <a href="/">DevJobs</a>
        </h1>
        {{#if barra}}
        <div class="buscador">
            <form action="/buscador" method="POST">
                <input type="text" name="query" class="buscador">
                <input type="submit" value="Buscar">
            </form>
        </div>
        {{/if}}
        {{#if cerrarSesion}}
        <div class="cerrar-sesion">
            <p>Hola! {{nombre}}</p>
            {{#if imagen}}
                <img src="/uploads/perfiles/{{imagen}}" alt="imagen perfil" class="admin-perfil">
            {{/if}}
            <a href="/administracion">Administracion</a>
            <a href="/cerrar-sesion">Cerrar Sesion</a>
        </div>
        {{/if}}
    </div>
    <div class="site-header contenedor separador">
        <h2>{{tituloPagina}}</h2>
        {{#if tagLine}}
        <p class="tagline">{{tagLine}}</p>
        {{/if}}
        {{#if boton}}
        <a href="/vacantes/nueva" class="btn btn-azul">Publicar Vacante Nueva</a>
        {{/if}}
    </div>
    <div class="contenido-principal contenedor">
        {{#if mensajes}}
        <div class="alertas">
            {{#mostrarAlertas mensajes}}
            {{/mostrarAlertas}}
        </div>
        {{/if}}
        {{{body}}}
    </div>
    <script src="/js/trix.js"></script>
    <script src="/dist/bundle.js"></script>
</body>

</html>