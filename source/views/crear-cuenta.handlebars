<main class="contenedor">
    <form action="/crear-cuenta" method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" id="" placeholder="Tu nombre...">
        </div>
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" id="" placeholder="Tu email...">
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu contraseña...">
        </div>
        <div class="campo">
            <label>Repetir Password</label>
            <input type="password" name="confirmarPassword" placeholder="Repite tu contraseña">
        </div>
        <div class="campo acciones">
            <a href="/iniciar-sesion">Volver a Login</a>
            <input type="submit" value="Crear Cuenta" class="btn btn-azul">
        </div>
    </form>
</main>