{
  "name": "plataforma_devjobs",
  "version": "1.0.0",
  "description": "Plataforma de trabajos para desarrolladores",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "development": "concurrently \"npm run dev\" \"npm run esbuild\"",
    "esbuild": "esbuild source/public/js/app.js --watch --minify --bundle --outfile=source/public/dist/bundle.js",
    "dev": "node --watch app.js",
    "start": "node app.js",
    "lint": "eslint **.js"
  },
  "keywords": [
    "dev",
    "jobs",
    "node",
    "npm",
    "backend"
  ],
  "author": "Lizandro_Narvaez",
  "license": "ISC",
  "dependencies": {
    "@handlebars/allow-prototype-access": "^1.0.5",
    "axios": "^1.2.2",
    "bcrypt": "^5.1.0",
    "concurrently": "^8.0.1",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.7",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.7",
    "http-errors": "^2.0.0",
    "mongoose": "^7.0.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "nodemailer-express-handlebars": "^6.1.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^8.0.0",
    "shortid": "^2.2.16",
    "slug": "^8.2.2",
    "sweetalert2": "^11.7.0"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "esbuild": "^0.17.17",
    "eslint": "^8.39.0",
    "nodemon": "^2.0.22",
    "parcel-bundler": "^1.12.5"
  }
}
